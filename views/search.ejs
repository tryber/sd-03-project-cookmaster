<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Search</title>
  </head>
  <body>
    <%- include('navbar', { user }); %>
    <div>
      <form action="/recipes/search" method="GET">
        <input data-testid="receita" name="buscar" type="text" />
        <button data-testid="buscar" type="submit">Buscar</button>
      </form>
    </div>
    <% if (recipes) {%>
    <div>
      <% recipes.map(x => { %>
      <div>
        <p>Receita: <%= x.name %></p>
        <p>Autor: <%= x.user %></p>
        <a href="/recipes/<%= x.id %>">Ver mais</a>
      </div>
      <%})%>
    </div>
    <% } %>
  </body>
</html>
