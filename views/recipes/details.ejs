<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cookmaster - Detalhes da receita</title>
  </head>

  <body>
    <%- include('../header', {user})%>
    <% if(user) { %>
    <div>
      <button type="button" data-testid="editar-receita" onclick="window.location.pathname='/recipes/<%= recipeDetails.id %>/edit'">Editar
        receita</button>
      <button type="button" data-testid="excluir-receita" onclick="window.location.pathname='/recipes/<%= recipeDetails.id %>/delete'">Excluir
        receita</button>
    </div>
    <% } %>
    <% if(recipeDetails) { %>
    <div>
      <h1><%=  recipeDetails.name %></h1>
      <p>Enviada por: <%= recipeDetails.user  %></p>
    </div>
    <div>
      <h2>Ingredientes</h2>
      <ul>
        <% recipeDetails && recipeDetails.ingredients.forEach(ingredient => { %>
        <li><%= ingredient %></li>
        <% }) %>
      </ul>
    </div>
    <div>
      <h2>Modo de Preparo</h2>
      <p><%= recipeDetails.instructions %></p>
    </div>
    <% } %>

  </body>

</html>
