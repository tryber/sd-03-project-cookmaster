<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cookmaster - Minhas Receitas</title>
  </head>

  <body>
    <%- include('../header', {user})%>
    <div>
      <h1>Minhas Receitas</h1>
      <button type="button" data-testid="nova-receita" onclick="window.location.pathname='/recipes/new'">Nova
        Receita</button>
    </div>
    <div>
      <% recipes && recipes.forEach(recipe => { %>
      <div>
        <p>Receita: <%= recipe.name %> </p>
        <p>Usu√°rio: <%= recipe.user %> </p>
        <a href="/recipes/<%= recipe.id %>" %>>Ver mais</a>
      </div>
      <% }) %>
    </div>
  </body>

</html>
