<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Cadastro de Receita</title>
  </head>
  <body>
    <% if(message) { %>
    <h2><%= message %></h2>
    <% } %>
    <h1>Nova Receita</h1>
    <form method="POST" action="/recipes/new" id="form">
      <label for="name"
        >Nome da Receita
        <input type="text" name="name" data-testid="nome-receita" />
      </label>
      <label for="ingredients"
        >Adicionar Ingrediente
        <ul id="list"></ul>
        <input type="text" id="ingredientInput" data-testid="ingredientes" />
        <button id="ingredientsBtn" data-testid="adicionar-ingrediente" type="button">
          Adicionar a Lista
        </button>
        <input type="text" id="hidden" name="ingredients" />
      </label>
      <label for="instructions"
        >Modo de Preparo
        <input type="text" name="instructions" data-testid="modo-de-preparo" width="500px" />
      </label>
      <button data-testid="postar-receita" type="submit">Salvar Receita</button>
      <a href="/">Voltar</a>
    </form>
  </body>
  <script>
    const ingredientsList = [];
    const ingredientsStr = ingredientsList.join(', ');
    document.getElementById('ingredientsBtn').addEventListener('click', () => {
      const input = document.getElementById('ingredientInput');
      const list = document.getElementById('list');
      const p = document.createElement('p');
      const li = document.createElement('li');
      const btn = document.createElement('button');
      const hiddenInput = document.getElementById('hidden');

      p.innerText = input.value;

      li.appendChild(p);

      btn.innerText = 'Excluir Ingrediente';
      btn.type = 'button';
      btn.addEventListener('click', ({ target }) => {
        const index = ingredientsList.indexOf(input.value);
        ingredientsList.slice(index, 1);
        hiddenInput.value = ingredientsList.join(', ');
        target.parentNode.remove();
      });
      li.appendChild(btn);
      list.appendChild(li);

      ingredientsList.push(input.value);
      hiddenInput.value = ingredientsList.join(', ');
      console.log(ingredientsList);
    });
  </script>
</html>
