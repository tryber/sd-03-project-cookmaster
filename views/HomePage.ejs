<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <%- include('navbar', { user }); %>
    <div>
      <a href="/recipes/search">
        <button data-testid="buscar-receita">
          Buscar Receita
        </button>
      </a>
      <% if (user) {%>
        <a href="/recipes/new">
          <button data-testid="nova-receita">Nova Receita</button>
        </a>
        <a href="/me/recipes">
          <button data-testid="minhas-receitas">Minhas Receitas</button>
        </a>
        <a href="/me/edit">
          <button data-testid="minha-conta">Minha Conta</button>
        </a>
      <%}%>
    </div>
    <% if (recipes) {%>
    <div>
      <h2>Receitas</h2>
      <% recipes.map(recipe => { %>
      <div>
        <p>Receita: <%= recipe.name %></p>
        <p>Autor: <%= recipe.user %></p>
        <a href="/recipes/<%= recipe.id %>">Ver mais</a>
      </div>
      <%})%>
    </div>
    <% } %>
  </body>
</html>
