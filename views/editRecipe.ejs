<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <form method="POST" action="/recipes/<%= id %>" id="recipe-form">
    <label for="recipe-name">Nome da Receita
      <input
        type="text"
        name="recipeName"
        id="recipe-name"
        data-testid="nome-receita"
        value="<%= name %>"
      >
    </label>

    <h3>Ingredientes</h3>
    <ul id="ingredients-list"></ul>
    <input type="hidden" value="<%= ingredients %>" id="hidden-input" name="ingredients">

    <input type="text" id="ingredients" data-testid="ingredientes">
    <button type="button" data-testid="adicionar-ingrediente" id="add-ingredient-btn">
      Adicionar Ingrediente
    </button>

    <label for="instructions">Modo de Preparo
      <input
        type="text"
        name="instructions"
        id="instructions"
        data-testid="modo-de-preparo"
        value="<%= instructions %> "
      >
    </label>

    <button type="submit" data-testid="postar-receita">
      Salvar Receita
    </button>
  </form>
  <script>
    window.onload = () => {
      const hiddenInput = document.getElementById('hidden-input');
      const ingredients = hiddenInput.value.split(',');
      const listContainer = document.getElementById('ingredients-list');

      ingredients.forEach(addLiIngredient);

      const btnOfIngs = document.getElementById('add-ingredient-btn');
      btnOfIngs.addEventListener('click', addIngredient);

      function submitForm(event) {
        event.preventDefault();
        const list = document.getElementById('ingredients-list').children;
        const ings = [];

        for (let i = 0; i < list.length; i += 1) {
          ings.push(list[i].innerText.slice(0, -19));
        }

        const hiddenInput = document.getElementById('hidden-input');
        hiddenInput.value = ings.join(',');
        hiddenInput.type = 'text';

        const form = document.getElementById('recipe-form');
        form.submit();
      }

      function createDelBtn() {
        const delBtn = document.createElement('button');

        delBtn.innerText = 'Excluir Ingrediente';

        delBtn.addEventListener('click', removeIngredient);

        const wrapper = document.createElement('div');
        wrapper.appendChild(delBtn);

        return wrapper;
      }

      function removeIngredient(event) {
        const item = event.target.parentNode.parentNode;
        const list = item.parentNode;
        list.removeChild(item);
      }

      function addLiIngredient(ing) {
        const item = document.createElement('li');
        item.innerText = ing;

        const delBtnWrapper = createDelBtn();

        item.appendChild(delBtnWrapper);
        const list = document.getElementById('ingredients-list');
        list.appendChild(item);
      }

      function addIngredient() {
        const ingredientInput = document.getElementById('ingredients');
        const ingredient = ingredientInput.value;

        addLiIngredient(ingredient);

        ingredientInput.value = '';
      }

      const form = document.getElementById('recipe-form');
      form.addEventListener('submit', submitForm);
    }
  </script>
</body>
</html>
