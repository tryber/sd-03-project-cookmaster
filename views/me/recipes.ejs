<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div>
      <h3>Cookmaster</h3>
      <a data-testid="logout" href="/logout">Logout</a>
      <a href="/recipes/new">
        <button data-testid="nova-receita">Nova Receita</button>
      </a>
    </div>
    <div>
      <% recipes && recipes.forEach(recipe => { %>
      <div>
        <h4><%= recipe.name %></h4>
        <p><%= recipe.user %></p>
        <a href="/recipes/<%= recipe.id %>">Ver mais</a>
      </div>
      <% })%>
    </div>
  </body>
</html>
