<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster</title>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Cookmaster</h1>

        <% if (user) { %>
        <div class="logado">
          <h5><%= user.name %> <%=user.leastName %></h5>
          <a href="/logout" data-testid="logout">Logout</a>
        </div>
        <% } else { %>
        <a href="/login"><h3 data-testid="login">Login</h3></a>
        <% } %>

      </header>

      <div class="mid">
        <div class="cima">
          <h2>Receitas</h2>
          <% if (user) { %>
          <button data-testid="nova-receita">Nova Receita</button>
          <% } %>
          <button data-testid="buscar-receita">Buscar Receitas</button>
        </div>

        <% if(recipes) { %>
          <div class="card">
           <% recipes.map( x => {%>
          <h3><%= x.name %></h3>
          <p><%= x.user %></p>
          <a href="/recipes/<%= x.id %>">Ver mais</a>
          <% }) %>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
