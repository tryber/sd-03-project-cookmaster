<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cookmaster - Home</title>
</head>

<body>
  <h1>Cookmaster</h1>
  <% if (recipes) {%>
  <div>
    <h2>Receitas</h2>
    <% recipes.map(recipe => { %>
    <div>
      <p><%= recipe.name %></p>
      <p>Autor: <%= recipe.user %></p>
      <a href="/recipes/<%= recipe.id %>">Ver mais</a>
    </div>
    <%})%>
  </div>
  <% if (user === recipe.user) {%>
    <div>
      <a href="recipes/:id/edit">
        <button type="button" data-testid="editar-receita">Editar Receita</button>
      </a>
      <a href="recipes/:id/delete">
        <button type="button" data-testid="excluir-receita">Excluir Receita</button>
      </a>
      </div>
    <%}%>
  <% } %>
</body>

</html>
