<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <header>
      <h1>Cookmaster!</h1>
      <%if (!user) {%>
        <button
          type="button"
          data-testid="login"
          onclick="window.location.pathname='/login'"
        >
          Login
        </button>
      <%} else {%>
        <button
          type="button"
          data-testid="logout"
          onclick="window.location.pathname='/logout'"
        >
          Logout
        </button>
        <button
          type="button"
          data-testid="nova-receita"
          onclick="window.location.pathname='/recipes/new'"
        >
          Nova Receita
        </button>
        <button
          type="button"
          data-testid="minhas-receitas"
          onclick="window.location.pathname='/me/recipes'"
        >
          Minhas receitas
        </button>
        <button
          type="button"
          data-testid="minha-conta"
          onclick="window.location.pathname='/me/edit'"
        >
          Minha Conta
        </button>
      <%};%>
      <button
        type="button"
        data-testid="buscar-receita"
        onclick="window.location.pathname='/recipes/search'"
      >
        Buscar Receitas
      </button>
    </header>
    <article class="receitas">
      <h2>Receitas</h2>
      <div>
        <%filteredRecipes.map((recipe) => {%>
          <div style="border: 1px solid black;">
            <h4><%=recipe.name%></h4>
            <h4><%=recipe.user%></h4>
            <a href="<%=`/recipes/${recipe.id}`%>">Ver mais</a>
          </div>
        <%})%>
      </div>
    </article>
  </body>
</html>
