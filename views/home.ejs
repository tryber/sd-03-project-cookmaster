<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <div>
      <h1>Cookmaster</h1>
      <% if(!user) { %>
      <a href="/login" data-testid="login">
        <button>Login</button>
      </a>
      <% } %>
      <% if(user) { %>
      <button data-testid="logout" type="button" onclick="window.location.pathname = '/logout'">
        Logout
      </button>
      <% } %>
    </div>
    <h2>Receitas</h2>
    <% recipes.forEach(recipe => { %>
    <div>
      <p><%= recipe.name %></p>
      <p><%= recipe.user %></p>
      <a href="#">Ver mais</a>
    </div>
    <% }) %>
    <button data-testid="buscar-receita">Buscar Receita</button>
    <% if(user) { %>
    <button data-testid="nova-receita" onclick="window.location.pathname='/new-recipes'">
      Nova Receita
    </button>
    <% } %>
  </body>
</html>
