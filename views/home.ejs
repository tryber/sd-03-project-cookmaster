<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <div>
      <h1>Cookmaster</h1>
    </div>
    <h2>Receitas</h2>
    <%recipes.forEach(recipe => { %>
    <div>
      <p><%= recipe.name %></p>
      <p><%= recipe.user %></p>
      <a href="#">Ver mais</a>
    </div>
    <% }) %>
    <button data-testid="buscar-receita">Buscar Receita</button>
    <!-- <% if(logged) { %> -->
    <button>
      <a href="/new-recipes" data-testid="nova-receita">Nova Receita</a>
    </button>
    <!-- <% } %> -->
  </body>
</html>
