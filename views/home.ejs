<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Home</title>
  </head>
  <body>
    <nav>
      <h1>Cookmaster</h1>
      <% if (user) { %>
        <a href="/logout" data-testid="logout">Logout</a>
      <% } else { %>
        <a href="/login" data-testid="login">Login</a>
      <% } %>
    </nav>
    <button onclick="window.location.pathname='/recipes/search'" data-testid="buscar-receita">
      Buscar Receita
    </button>
    <div>
      <h2>Receitas</h2>
      <% recipes.forEach(recipe => { %>
       <div>
         <h4><%= recipe.name %></h4>
         <span><%= recipe.user %></span>
         <a href=<%= `/recipes/${recipe.id}` %>> Ver mais </a>
       </div>
      <% }) %>
    </div>
    <% if (user) { %>
      <button onclick="window.location.pathname='/recipes/new'" data-testid="nova-receita">
        Nova Receita
      </button>
      <button onclick="window.location.pathname='/me/recipes'" data-testid="minhas-receitas">
        Minhas Receitas
      </button>
      <button onclick="window.location.pathname='/me/edit'" data-testid="minha-conta">
        Minha Conta
      </button>
    <% } %>
  </body>
</html>
