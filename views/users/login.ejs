<!DOCTYPE html>
  <body>
    <% if (message) {%>
      <div class="message">
      <% message.forEach((elem) => { %>
          <p><%=elem%></p>
      <% }) %>
      </div>
    <% } %>
    <form action="/users/login" method="POST">
      <label for="emailInput">Email: </label>
      <input type="text" name="email" id="emailInput" data-testid="email" /><br />
      <label for="passwordInput">Senha: </label>
      <input type="password" name="password" id="passwordInput" data-testid="senha" /><br />
      <label for="checkInput">Confirmar Senha: </label>
      <input type="password" name="confirm" id="checkInput" data-testid="confirmar-senha" /><br />
      <label for="emailInput">Nome: </label>
      <input type="text" name="name" id="emailInput" data-testid="nome" /><br />
      <label for="emailInput">Sobrenome: </label>
      <input type="text" name="lastName" id="emailInput" data-testid="sobrenome" /><br />
      <button type="submit" data-testid="cadastrar" >Cadastrar-se</button>
    </form>
    <a href='/login' data-testid="login" >Fazer login</a>
  </body>
</html>
