<!DOCTYPE html>
<html>
  <head>
    <h2>search</h2>
  </head>
  <body>
    <%- include('navbar'); %>
    <h1>Receitas</h1>
    <div>
      <form action="/recipes/search" method="GET">
        <input type="text" data-testid="receita" name="q" />
        <button type="submit" data-testid="buscar" >Buscar</button>
        <% searchRecipe.map((elem) => { %>
          <h2>Receita: <%= elem.name %></h2>
          <h3>Autor: <%= elem.user %></h3>
          <a href="/recipes/<%= elem.id %> "%>Ver mais</a>
          <% }) %>
    </form>
  </body>
</html>