<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cookmaster - User Recipes</title>
</head>

<body>
  <div>
    <% if(userRecipes) { %>
    <% userRecipes.map((recipe) => { %>
    <div class="Recipe_selection">
      <p><%=`${recipe.title}`%></p>
      <p><%=`${recipe.user}`%></p>
      <a href="<%=`/recipes/${recipe.id}`%>">Ver mais</a>
    </div>
    <% }) %>
    <% } %>
    <button onclick="window.location.pathname='/'">Voltar</button>
  </div>
</body>

</html>
