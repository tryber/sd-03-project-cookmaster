<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - New Recipe</title>
  </head>
  <body>
    <%- include('../navbar', { user: user }); %> <% if (message) {%>
    <div class="message"><%= message %></div>
    <% } %> <% if (recipe) {%>
    <h1>Editar Receita</h1>
    <form id="new-recipe-form" action="/recipes" method="POST">
      <label for="recipeName">Nome da Receita</label><br />
      <input
        required
        type="text"
        name="recipeName"
        id="recipeName"
        data-testid="nome-receita"
        value=<%= recipe.name %>
      />
      <br />
      <ul id="ingredientesList">
        <% window.onload = () => addIngredient(recipe.ingredients) %>
      </ul>
      <input type="text" name="ingredients" id="ingredients" data-testid="ingredientes" />
      <button
        for="ingredients"
        type="button"
        id="add-ingredient-button"
        data-testid="adicionar-ingrediente"
      >
        Adicionar Ingrediente
      </button>
      <br />
      <label for="instructions">Modo de Preparo</label><br />
      <input
        required
        type="text"
        name="instructions"
        id="instructions"
        data-testid="modo-de-preparo"
        value=<%= recipe.instructions %>
      /><br />
      <button type="submit" data-testid="postar-receita">Salvar Receita</button>
    </form>
    <% } %>
  </body>
  <script>
    const addIngredientButton = document.querySelector('#add-ingredient-button');
    const ingredientsList = document.querySelector('#ingredientesList');
    const ingredientInput = document.querySelector('#ingredients');
    //const form = document.querySelector('#new-recipe-form');

    const createNewIngredient = () => {
      const item = document.createElement('li');
      const deleteButton = document.createElement('button');

      item.innerText = ingredientInput.value;
      deleteButton.innerText = 'Excluir ingrediente';
      item.className = 'ingredient-item';
      deleteButton.className = 'delete-button';
      ingredientsList.appendChild(item);
      ingredientsList.appendChild(deleteButton);
      ingredientInput.value = null;

      deleteButton.addEventListener('click', () => {
        item.remove();
        deleteButton.remove();
      });
    };

    const addIngredient = (ingredients) => {
      ingredients.map(ingredient => {
        const item = document.createElement('li');
        const deleteButton = document.createElement('button');

        item.innerText = ingredient;
        deleteButton.innerText = 'Excluir ingrediente';
        item.className = 'ingredient-item';
        deleteButton.className = 'delete-button';

        document.querySelector('#ingredientesList').appendChild(item);
        document.querySelector('#ingredientesList').appendChild(deleteButton);

        deleteButton.addEventListener('click', () => {
          item.remove();
          deleteButton.remove();
        });
      });
    }

    // const onSubmit = () => {
    //   const ingredients = document.querySelectorAll('.ingredient-item');
    //   const ingredientsArr = ingredients.forEach(ingredient => ingredient.innerText);
    //   console.log(ingredientsArr);
    // }

    addIngredientButton.addEventListener('click', createNewIngredient);
    // form.addEventListener('submit', onSubmit);
  </script>
</html>
