<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookmaster - Minhas Receitas</title>
  </head>
  <header>
    <h2>Cookmaster</h2>
    <% if (user) { %>
      <p><%= `${user.firstName} ${user.lastName}` %></p>
      <a data-testid="logout" href="/logout">Logout</a>
    <% } else { %>
      <a data-testid="login" href="/login">Login</a>
    <% } %>
  </header>
  <body>
    <h1>Minhas Receitas</h1>
      <button data-testid="nova-receita" type="button" onclick="window.location.pathname='/recipes/new'">Nova Receita</button>
    <div>
      <% recipes.forEach(recipe => { %>
        <h3><%= recipe.name %></h3>
        <h4><%= recipe.user %></h4>
        <a href="/recipes/<%= recipe.id %>">Ver mais</a>
      <% }) %>
    </div>
  </body>
</html>
