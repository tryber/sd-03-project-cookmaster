<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <h2>Minhas Receitas</h2>
        <a href="/recipes/new">
          <button data-testid="nova-receita">
            Nova Receita
          </button>
        </a>
      </div>
      <% if (recipes) {%>
      <div>
        <% recipes.map(recipe => { %>
        <div>
          <p>Receita: <%= recipe.name %></p>
          <p>Autor: <%= recipe.user %></p>
          <a href="/recipeDetail/<%= recipe.id %>">Ver mais</a>
        </div>
        <%})%>
      </div>
      <% } %>
</body>
</html>